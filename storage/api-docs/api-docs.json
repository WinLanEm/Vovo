{
    "openapi": "3.0.0",
    "info": {
        "title": "VOVO",
        "version": "1.0.0"
    },
    "paths": {
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Products list with filters and pagination",
                "operationId": "d2e93e1e1fb0b577fa724585ac308f34",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Items per page (1â€“100)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 20,
                            "maximum": 100,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "q",
                        "in": "query",
                        "description": "Search query (max 255 chars)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "maxLength": 255
                        }
                    },
                    {
                        "name": "price_from",
                        "in": "query",
                        "description": "Minimal price (>= 0)",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "minimum": 0
                        }
                    },
                    {
                        "name": "price_to",
                        "in": "query",
                        "description": "Maximum price (>= 0, >= price_from)",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "format": "float",
                            "minimum": 0
                        }
                    },
                    {
                        "name": "category_id",
                        "in": "query",
                        "description": "Category ID (existing category)",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    {
                        "name": "in_stock",
                        "in": "query",
                        "description": "Only products in stock (true/false)",
                        "required": false,
                        "schema": {
                            "type": "boolean"
                        }
                    },
                    {
                        "name": "rating_from",
                        "in": "query",
                        "description": "Minimal rating from 1 to 5",
                        "required": false,
                        "schema": {
                            "type": "number",
                            "maximum": 5,
                            "minimum": 1
                        }
                    },
                    {
                        "name": "sort",
                        "in": "query",
                        "description": "Sort option (one of enum ProductSort)",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "price_asc",
                                "price_desc",
                                "name_asc",
                                "name_desc"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful products list response"
                    },
                    "422": {
                        "description": "Validation error"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Products"
        }
    ]
}